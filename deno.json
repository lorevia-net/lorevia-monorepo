{
    "tasks": {
        "web:dev": "deno task --cwd lorevia.net dev",
        "desk:dev": "deno task --cwd lorevia.desktop tauri dev"
    },
    "workspace": [
        "./lorevia.net",
        "./lorevia.desktop"
    ],
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "types": [
            "./",
            "**/types/*.d.ts"
        ]
    },
    "nodeModulesDir": "auto"
}